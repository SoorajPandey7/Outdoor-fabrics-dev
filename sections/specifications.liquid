<div class="specifications-main-section" >
  <div class="specifications-inner-section" >
    {%- for block in section.blocks -%}
      <div class="specifications-items-details-list" >
        {% if block.settings.title != blank %}
          <div class="specifications-title-section" >
            <h2>{{ block.settings.title }}</h2>
          </div>
        {% endif %}
        {% if block.settings.content != blank %}
          <div class="specifications-item-content" >
            {{ block.settings.content }}
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Specifications Section",
  "tag": "section",
  "class": "specifications-section",
  "settings": [],
  "blocks": [
    {
      "type": "fabric_specifications",
      "name": "Fabric Specifications",
      "settings": [
        {
          "type": "text",
          "label": "Title",
          "id": "title"
        },
        {
          "type": "richtext",
          "label": "Content",
          "id": "content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Specifications Section"
    }
  ]
}
{% endschema %}

