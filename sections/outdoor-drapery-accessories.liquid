<div class="outdoor-drapery-accessories-main-section" >
  <div class="outdoor-drapery-accessories-inner-section" >
    <div class="outdoor-drapery-accessories-items-section" >
      {%- for block in section.blocks -%}
        {% if block.settings.outdoor_drapery_options == 'Dura Rod Snap Mounts' %}
          <div class="outdoor-drapery-accessories-title" >{{ block.settings.outdoor_drapery_options }}</div>
          <div class="outdoor-drapery-accessories-item" >
            <div class="outdoor-drapery-accessories-specifications" >
              {% if block.settings.image != blank %}<div class="outdoor-drapery-accessories-image" >
                <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image.alt }}" widtd="230" height="auto" />
              </div>{% endif %}
              <div class="outdoor-drapery-accessories-specifications-content" >
                <table>
                  <tbody>
                    {% if block.settings.specifications_name_info != blank %}<tr>
                      <td width="25%" >{% if block.settings.specifications_name_title != blank %}{{ block.settings.specifications_name_title }}{% endif %}</td>
                      <td width="75%" >{{ block.settings.specifications_name_info }}</td>
                    </tr>{% endif %}
                    {% if block.settings.specifications_material_info != blank %}<tr>
                      <td width="25%" >{% if block.settings.specifications_material_title != blank %}{{ block.settings.specifications_material_title }}{% endif %}</td>
                      <td width="75%" >{{ block.settings.specifications_material_info }}</td>
                    </tr>{% endif %}
